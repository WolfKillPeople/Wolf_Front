<!-- registered Modal -->
<div class="registered_modal" id="registered_modal" tabindex="-1" role="dialog"
     aria-labelledby="registered_modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bgc_account">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title" id="registered_modal" style="color: #fff;">註冊帳號</h5>
            </div>

            <div class="modal-body">
                <from asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="imgcontainer mx-auto d-flex justify-content-center">
                        <button class="btn user_img_btn" data-toggle="tooltip" data-placement="right" id="user_img"
                                title="選擇更換頭像">
                            <!-- <i class="fas fa-user-plus avatat fa-5x justify-content-center" id="avatat"></i> -->
                            <img id="avatat" class="avatat" src="https://i.imgur.com/FMfI2fM.png" alt="user" v-model="item.PicUrl">
                        </button>
                    </div>
                    <div class="form-group">
                        <label for="Email_ID">名字</label>
                        <input type="text" class="form-control" id="Name_ID" placeholder="Enter name" v-model="item.Name">
                    </div>
                    <div class="form-group">
                        <label for="Email_ID" asp-for="Input.Email">帳號</label>
                        <input asp-for="Input.Email" type="email" class="form-control" id="Email_ID" placeholder="Enter email" v-model="item.Account">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="from-group">
                        <label asp-for="Input.Password" for="USer_password">密碼</label>
                        <input asp-for="Input.Password" type="password" class="form-control" id="USer_password" placeholder="Enter password" v-model="item.Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="from-group mt-2">
                        <label for="USer_Checkedpassword">確認密碼</label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="USer_password"
                               placeholder="Checked password">
                    </div>
                    <button type="submit"
                            class="btn btn-primary form-control mt-4 justify-content-center registered_Account">
                        @*onclick="AddNewAccount()"*@
                        註冊
                    </button>
                </from>
            </div>
        </div>
    </div>
</div>


<!-- userImg Modal -->
<div class="modal fade " id="user_pic" tabindex="-1" role="dialog" aria-labelledby="userImgModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content user_Choiceimg">
            <div class="modal-header border-bottom-0 user_btn">
                <h5 class="modal-title" id="userImgModalLabel">頭像選擇</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="d-flex row">
                <!-- onclick="changePICS(this)" -->
                <img aria-label="Close" data-dismiss="modal" class="btn users_pic" src="https://i.imgur.com/9Pbvhnk.png"
                     alt="girl1" onclick="changePICS(this)">
                <img aria-label="Close" data-dismiss="modal" class="btn users_pic" src="https://i.imgur.com/ayhI3DJ.png"
                     alt="girl2" onclick="changePICS(this)">
                <img aria-label="Close" data-dismiss="modal" class="btn users_pic" src="https://i.imgur.com/XFglbZc.png"
                     alt="girl3" onclick="changePICS(this)">
            </div>
            <div class="d-flex row">
                <img aria-label="Close" data-dismiss="modal" class="btn users_pic" src="https://i.imgur.com/HBcZ8nk.png" alt="boy2"
                     onclick="changePICS(this)">
                <img aria-label="Close" data-dismiss="modal" class="btn users_pic" src="https://i.imgur.com/vRjQfJc.png" alt="boy3"
                     onclick="changePICS(this)">
                <!-- <button   class="btn users_pic user_picws plus mt-5 ml-4 " onclick="changePICS(this)"><b>+</b></button> -->
                <div class="upLoadImg btn" id="upLoadImg">
                    <span class="upload_icon" id="upload_icon">+</span>
                    <input type="file" id="update" class="btn users_pic plus" v-on:change="load">
                </div>
            </div>
        </div>
    </div>
</div>
